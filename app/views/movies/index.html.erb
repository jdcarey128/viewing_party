# this could be refactored in a partial 
<section><%= button_to 'Discover Top 40 Movies', movies_path, method: :get %></section>

<section>
  <%= form_with url: movie_search_path, local: true, method: :get do |f| %>
    <%= f.text_field(:query, placeholder: 'eg. Harry Potter') %>
    <%= f.submit 'Find Movies' %>
  <% end %>
</section>

# this could be either refactored in a partial or combined with search view
<table class='results'>
<tr>
  <td>Title</td>
  <td>Rating</td>
</tr>
  <% @movies.each do |movie| %>
    <tr id='api-id-<%= movie.id %>' class='movie-block'>
      <td><%= movie.title %></td>
      <td><%= movie.vote_average %></td>
    </tr>
  <% end %>
</table>