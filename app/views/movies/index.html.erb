<%= render partial: 'search_movies' %>

<% if @query %>
  <h1>Search results for "<%= @query %>"</h1>
<% else %>
  <h1>Top Movie Results</h1>
<% end %>

<table class='results'>
<tr>
  <td>Title</td>
  <td>Rating</td>
</tr>
  <% @movies.each do |movie| %>
    <tr id='api-id-<%= movie.id %>' class='movie-block'>
      <td><%= movie.title %></td>
      <td><%= movie.vote_average %></td>
    </tr>
  <% end %>
</table>